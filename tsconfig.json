{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "amd",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "./www/app"
    },
    "filesGlob": [
        "./app/**/*.ts",
        "./app/**/*.tsx",
        "./typings/**.d.ts"
    ],
    "files": [
        "./app/Application.ts",
        "./app/bootstrap.ts",
        "./app/components/ContentViewLoader.ts",
        "./app/lib/JQueryScoped.ts",
        "./app/lib/webconsole/src/Console.ts",
        "./app/typings/Klochwork.ts",
        "./app/viewModels/ApplicationViewModel.ts",
        "./app/viewModels/NavigationViewModel.ts",
        "./app/viewModels/ResumeViewModel.ts",
        "./typings/tsd.d.ts"
    ]
}
